                        <li>@Html.ActionLink("Fazer Postagem", "Create", "Post", null, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Meu Perfil", "UserPanel", "User", null, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Logout", "Logout", "User", null, new { @class = "nav-link" })</li>
